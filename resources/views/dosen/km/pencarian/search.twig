<div class="col-lg-4">
  <div class="card" style="margin:0px;">
    <div style="padding:10px;background-color:#2f333e;color:white;">
      <i class="fa fa-search"></i> Pencarian
    </div>
    <div class="card-body">
      <form class="form" style="">

        <div class="form-group row">
          <label class="col-sm-3 form-control-label">tahun1</label>
          <input type="number" min="2010" max="2099" step="1"
          v-model="search.tahun1" class="mx-sm-1 form-control">
        </div>

        <div class="form-group row">
          <label class="col-sm-3 form-control-label">tahun2</label>
          <input type="number" min="2010" max="2099" step="1" 
          type="date" v-model="search.tahun2" class="mx-sm-1 form-control">
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Semester</label>
          <div class="col-sm-12 select" style="padding:0 5px;">
            <select v-model="search.semester" class="form-control" style="">
              <option value=""></option>
              <option value="ganjil">Ganjil</option>
              <option value="genap">Genap</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Hari</label>
          <div class="col-sm-12 select" style="padding:0 5px;">
            <select v-model="search.hari" class="form-control" style="">
              <option value=""></option>
              <option value="senin">senin</option>
              <option value="selasa">selasa</option>
              <option value="rabu">rabu</option>
              <option value="kamis">kamis</option>
              <option value="jumat">jumat</option>
              <option value="sabtu">sabtu</option>
              <option value="minggu">minggu</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Waktu mulai</label>
          <input type="time" v-model="search.waktu_mulai" class="mx-sm-1 form-control">
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Waktu akhir</label>
          <input type="time" v-model="search.waktu_akhir" class="mx-sm-1 form-control">
        </div>

        <div class="form-group row">
          <input type="submit" @click.prevent = "searchKm()" value="Cari" class="mx-sm-1 btn btn-primary btn-block">
          <input type="submit" @click.prevent = "reset()" value="Reset" class="mx-sm-1 btn btn-primary btn-block">
        </div>

      </form>
    </div>
  </div>
</div>