<div class="col-lg-4">
  <div class="card" style="margin:0px;">
    <div style="padding:10px;background-color:#2f333e;color:white;">
      <i class="fa fa-pencil"></i> Buat Ketersediaan Mengajar
    </div>
    <div class="card-body">
      <form class="form" style="">

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Tahun akademik</label>
          <select class="form-control" v-model="createKmData.post.kd_tahun_akademik">
            <option value=""></option>
            <option v-for="(item, index) in tahunAkademik" :value="item.kd_thn_akademik">
              ${ item.thn_akademik } (${ item.semester })
            </option>
          </select>
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Semester</label>
          <div class="col-sm-12 select" style="padding:0 5px;">
            <select v-model="createKmData.post.semester" class="form-control" style="">
              <option value=""></option>
              <option value="ganjil">Ganjil</option>
              <option value="genap">Genap</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Hari</label>
          <div class="col-sm-12 select" style="padding:0 5px;">
            <select v-model="createKmData.post.hari" class="form-control" style="">
              <option value=""></option>
              <option value="senin">senin</option>
              <option value="selasa">selasa</option>
              <option value="rabu">rabu</option>
              <option value="kamis">kamis</option>
              <option value="jumat">jumat</option>
              <option value="sabtu">sabtu</option>
              <option value="minggu">minggu</option>
            </select>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Waktu mulai</label>
          <input type="time" v-model="createKmData.post.waktu_mulai" class="mx-sm-1 form-control">
        </div>

        <div class="form-group row">
          <label class="col-sm-12 form-control-label">Waktu akhir</label>
          <input type="time" v-model="createKmData.post.waktu_akhir" class="mx-sm-1 form-control">
        </div>

        <div class="form-group row">
          <input type="submit" @click.prevent = "createKm()" value="Simpan" class="mx-sm-1 btn btn-primary btn-block">
          <input type="submit" @click.prevent = "resetCreateKm()" value="Reset" class="mx-sm-1 btn btn-primary btn-block">
        </div>

      </form>
    </div>
  </div>
</div>